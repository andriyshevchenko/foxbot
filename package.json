{
  "name": "foxbot",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf output",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:e2e": "vitest run tests/e2e",
    "test:verbose": "vitest run --reporter=verbose",
    "test:e2e:verbose": "vitest run tests/e2e --reporter=verbose",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:coverage:html": "vitest run --coverage && start output/coverage/index.html",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:headed": "playwright test --headed",
    "ci": "npm run typecheck && npm run lint && npm run test:coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint-staged": "lint-staged",
    "codegen": "playwright codegen",
    "pw:report": "playwright show-report",
    "prepare": "husky",
    "postinstall": "playwright install chromium"
  },
  "dependencies": {
    "playwright": "^1.55.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.5",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  },
  "imports": {
    "#foxbot/*": "./foxbot/*",
    "#reachly/*": "./reachly/*",
    "#examples/*": "./examples/*",
    "#tests/*": "./tests/*"
  }
}
