{
  "architecture": {
    "query": {
      "interface": "Query",
      "method": "value",
      "returns": "Promise<T>",
      "pure": true
    },
    "action": {
      "interface": "Action",
      "method": "perform",
      "returns": "Promise<void>",
      "noReturnValues": true
    }
  },
  "typescript": {
    "strict": true,
    "banAnyInSrc": true,
    "preferLocator": true,
    "avoidElementHandle": true,
    "avoidWaitForTimeout": true
  },
  "naming": {
    "classNameNoErSuffix": true,
    "variablesSingleNoun": true,
    "methodsSingleVerb": true,
    "cqrs": {
      "buildersNounyOk": true,
      "actionsVerb": true
    },
    "oneClassPerFile": true,
    "namedExportsOnly": true
  },
  "oop_rules": {
    "noSetters": true,
    "avoidGetters": true,
    "preferImmutability": true,
    "noImplementationInheritance": true,
    "noStaticUtils": true,
    "publicMethodsImplementInterfaces": true,
    "constructorAssignmentsOnly": true,
    "maxAttributesPerClass": 4,
    "minAttributesPerClass": 1,
    "noNullArgsOrReturns": true,
    "noTypeIntrospectionOrCasting": true,
    "noReflection": true
  },
  "formatting": {
    "pairedBracketsAllowed": true,
    "methodBodiesNoCommentsOrBlankLines": true,
    "errorLogMessageSingleSentenceNoPeriod": true
  },
  "testing_ci": {
    "testsFirst": true,
    "unitPath": "tests/**",
    "e2ePath": "tests-e2e/**",
    "e2eRunner": "playwright",
    "unitRunner": "vitest",
    "ciMustBeGreenBeforeReview": true,
    "lockfileRequired": true,
    "useNpmCi": true
  }
}